{
  "exclude": ["node_modules"],
  "include": ["src"],
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "strict": true,
    "baseUrl": "./src",
    "outDir": "./dist/",
    "typeRoots": ["node_modules/@types", "src/local-types"],
    "paths": {
      "@assets/*": ["./src/assets/*"]
    },
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true
  }
}
